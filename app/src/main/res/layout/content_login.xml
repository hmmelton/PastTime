<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/login_main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hmmelton.pasttime.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/login_bottom_bar"
        style="@style/SlidingWhiteBar"
        android:layout_alignParentBottom="true"/>

    <View
        android:id="@+id/login_middle_bar"
        style="@style/SlidingWhiteBar"
        android:layout_above="@id/login_bottom_bar"/>

    <View
        android:id="@+id/login_top_bar"
        style="@style/SlidingWhiteBar"
        android:layout_above="@id/login_middle_bar"/>

</RelativeLayout>
